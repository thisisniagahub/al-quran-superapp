# Server Config
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alquran_app
DB_USER=postgres
DB_PASSWORD=yourpassword

# External APIs
QURAN_API_URL=https://api.alquran.cloud/v1
ESOLAT_API_URL=https://www.e-solat.gov.my/index.php
